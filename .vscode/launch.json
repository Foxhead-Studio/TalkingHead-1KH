{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: videos_download.py (small dataset)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/videos_download.py",
            "args": [
                "--input_list",
                "data_list/small_video_ids.txt",
                "--output_dir",
                "small/raw_videos"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: videos_split.sh (small dataset)",
            "type": "bashdb",
            "request": "launch",
            "program": "${workspaceFolder}/videos_split.sh",
            "args": ["small/raw_videos", "small/1min_clips"]
        },
        {
            "name": "Debug: videos_split.py (small dataset)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/videos_split.py",
            "args": [
                "--input_dir",
                "small/raw_videos",
                "--output_dir",
                "small/1min_clips"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: videos_crop.py (small dataset)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/videos_crop.py",
            "args": [
                "--input_dir",
                "small/1min_clips/",
                "--output_dir",
                "small/cropped_clips",
                "--clip_info_file",
                "data_list/small_video_tubes.txt"
            ],
            "console": "integratedTerminal"
        }
    ]
}